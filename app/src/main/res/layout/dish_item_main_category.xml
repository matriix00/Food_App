<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SplashActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_80ssp"
        android:layout_height="@dimen/_80ssp"
        app:cardElevation="@dimen/_5ssp"
        android:layout_margin="@dimen/_10ssp"
        app:cardCornerRadius="@dimen/_10ssp"
        app:cardBackgroundColor="@color/yellow">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_dish"
                android:layout_width="@dimen/_90ssp"
                android:layout_height="@dimen/_70ssp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-15dp"
                android:layout_marginRight="-22dp"
                android:src="@drawable/foodd" />

            <TextView
                android:id="@+id/tv_dish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/gilroy_bold"
                android:maxEms="10"
                android:maxLines="2"
                android:padding="@dimen/_10ssp"
                android:text="Dish Name"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>